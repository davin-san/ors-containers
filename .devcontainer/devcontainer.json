{
	"name": "ors-dev-env",
	
	// Points to our docker-compose.yml file in the same directory
	"dockerComposeFile": "docker-compose.yml",
	
	// The name of the service in docker-compose.yml to use
	"service": "dev",
	
	// This is now the folder containing our .code-workspace file
	"workspaceFolder": "/app/ors-containers",
	
	"forwardPorts": [8501],
	
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"tamasfe.even-better-toml"
			]
		}
	},
	
	// This command runs after the container is created.
	// It tells VS Code to automatically open your new workspace,
	// which brings both folders into your sidebar.
	"postCreateCommand": "code ors-dev.code-workspace",
	
	// Run as root inside the container for easier package installs
	"remoteUser": "root"
}

